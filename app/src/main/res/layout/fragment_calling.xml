<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment.Calling.CallingFragment"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/TEXT_PHONE_NUM"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:textSize="30sp" />
            <ImageButton
                android:id="@+id/BACK_SPACE"
                android:layout_marginRight="5dp"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@drawable/dial_cancel_black"
                android:scaleType="fitCenter"
                android:onClick="onClick"
                android:background="#ffffff"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <TableLayout
        android:id="@+id/LAYOUT_KEYPAD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/KEYPAD_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:padding="2dp"
                android:text="1"
                android:textColor="#000000"
                android:textSize="42sp" />

            <Button
                android:id="@+id/KEYPAD_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:padding="2dp"
                android:text="2"
                android:textColor="#000000"
                android:textSize="42sp" />

            <Button
                android:id="@+id/KEYPAD_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:padding="2dp"
                android:text="3"
                android:textColor="#000000"
                android:textSize="42sp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/KEYPAD_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:padding="2dp"
                android:text="4"
                android:textColor="#000000"
                android:textSize="42sp" />

            <Button
                android:id="@+id/KEYPAD_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:text="5"
                android:textColor="#000000"
                android:textSize="42sp" />

            <Button
                android:id="@+id/KEYPAD_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:text="6"
                android:textColor="#000000"
                android:textSize="42sp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/KEYPAD_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:padding="2dp"
                android:text="7"
                android:textColor="#000000"
                android:textSize="42sp" />

            <Button
                android:id="@+id/KEYPAD_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:text="8"
                android:textColor="#000000"
                android:textSize="42sp" />

            <Button
                android:id="@+id/KEYPAD_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:text="9"
                android:textColor="#000000"
                android:textSize="42sp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/KEYPAD_STAR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="onClick"
                android:padding="2dp"
                android:text="*"
                android:textColor="#000000"
                android:textSize="42sp" />

            <Button
                android:id="@+id/KEYPAD_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:text="0"
                android:textColor="#000000"
                android:textSize="42sp" />

            <Button
                android:id="@+id/KEYPAD_SHAP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/dial_btn_bg"
                android:onClick="onClick"
                android:text="#"
                android:textColor="#000000"
                android:textSize="42sp" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/KEYPAD_VCALL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="onClick"
                android:padding="2dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="42sp" />

            <ImageView
                android:id="@+id/KEYPAD_CALL"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                android:src="@drawable/dial_calling_black"/>

            <ImageView
                android:id="@+id/KEYPAD_HIDE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#ffffff"
                android:onClick="onClick"
                android:textColor="#000000"
                android:textSize="42sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>