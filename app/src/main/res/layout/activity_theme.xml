<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageButton
                android:id="@+id/SETTINGS_BACK_BUTTON2"
                android:layout_width="523dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="7"
                android:background="@drawable/backspace" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/voshow"
                android:orientation="vertical"
                android:paddingLeft="10dp">
            </ImageView>
            <TextView
                android:layout_width="523dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10.3"
        android:orientation="horizontal"
        android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="6dp"
                android:text="테마 설정"
                android:textSize="27dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/theme_black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/black_theme"
                    android:textSize="40dp" />

                <ImageView
                    android:id="@+id/theme_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/blue_theme"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/theme_green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/green_theme"
                    android:textSize="40dp" />

                <ImageView
                    android:id="@+id/theme_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/yellow_theme"
                    android:textSize="40dp" />
            </LinearLayout>
        000
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>