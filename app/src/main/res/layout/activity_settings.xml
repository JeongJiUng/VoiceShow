<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageButton
                android:id="@+id/SETTINGS_BACK_BUTTON"
                android:layout_width="523dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:layout_height="match_parent"
                android:layout_weight="6.5"
                android:background="@drawable/bnt_back_black" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/voshow_black"
                android:orientation="vertical"
                android:paddingLeft="10dp">
            </ImageView>

            <TextView
                android:layout_width="523dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
            android:background="#fdf4ff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:padding="2dp">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:orientation="horizontal"
                android:padding="2dp">

                <ImageView
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/setting_icon_black"/>

                <Button
                    android:id="@+id/SETTINGS_CHATLETTER"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="글자수설정"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/mint"
                    android:shadowColor="@color/colorWhite"
                    android:textSize="40dp"
                    android:onClick="setChatNum" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:orientation="horizontal"
                android:padding="2dp">

                <ImageView
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/setting_icon_black"/>

                <Button
                    android:id="@+id/SETTINGS_DEL_FREQ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="삭제주기설정"
                    android:background="@drawable/mint"
                    android:textColor="@color/colorAccent"
                    android:textSize="40dp"
                    android:layout_weight="1"
                    android:onClick="setDeleteFrequency"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:padding="2dp">

                <ImageView
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/setting_icon_black"/>

                <Button
                    android:id="@+id/SETTINGS_PASSWORD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="보안설정"
                    android:textSize="40dp"
                    android:background="@drawable/mint"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:onClick="setSecurity"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>