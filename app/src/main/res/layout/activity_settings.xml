<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageButton
            android:id="@+id/SETTINGS_BACK_BUTTON"
            android:layout_width="523dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="25dp"
            android:layout_weight="7"
            android:background="@drawable/backspace" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="@drawable/voshow"
            android:orientation="vertical"
            android:paddingLeft="10dp">
        </ImageView>

        <TextView
            android:layout_width="523dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:padding="2dp">

            <Button
                android:id="@+id/SETTINGS_THEME"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="테마설정"
                android:textSize="40dp"
                android:layout_weight="5"
                android:onClick="openThemeActivity"/>

            <Button
                android:id="@+id/SETTINGS_CHATLETTER"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="글자수설정"
                android:textSize="40dp"
                android:onClick="setChatNum" />

            <Button
                android:id="@+id/SETTINGS_DEL_FREQ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="삭제주기설정"
                android:textSize="40dp"
                android:layout_weight="5"
                android:onClick="setDeleteFrequency"/>

            <Button
                android:id="@+id/SETTINGS_PASSWORD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="보안설정"
                android:textSize="40dp"
                android:layout_weight="5"
                android:onClick="setSecurity"/>

            <Button
                android:id="@+id/SETTINGS_VERSION"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="버젼확인"
                android:textSize="40dp"
                android:layout_weight="5"
                android:onClick="showVersion"/>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.LinearLayoutCompat>