<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment.Address.AddressFragment">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_weight="1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profileimg"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/addressName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="New Text"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:maxLength="8"/>

        <TextView
            android:id="@+id/addressNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Text"
            android:textColor="#666666"
            android:textSize="16sp"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addressCalling"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/calling_img"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/addressChatting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_toRightOf="@+id/addressCalling"
            android:scaleType="fitCenter"
            android:src="@drawable/chatting_blue_img"
            android:clickable="true"/>
    </RelativeLayout>

</LinearLayout>