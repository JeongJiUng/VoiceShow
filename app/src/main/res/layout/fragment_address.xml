<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment.Address.AddressFragment">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_weight="1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"/>
        <!--android:src="@drawable/profileimg"-->


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/addressName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:maxLength="8"
            android:text="New Text"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/addressNum"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Text"
            android:textColor="#666666"
            android:textSize="16dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_weight="2"
        android:paddingLeft="10dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/addressCalling"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:scaleType="fitCenter" />
            <!--android:src="@drawable/calling_img"-->


        <ImageView
            android:id="@+id/addressChatting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_toRightOf="@+id/addressCalling"
            android:scaleType="fitCenter"
            android:clickable="true"/>
            <!--android:src="@drawable/chatting_blue_img"-->

    </RelativeLayout>

</LinearLayout>