<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="17dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#D5A2F9"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageButton
            android:id="@+id/SETTINGS_BACK_BUTTON3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bnt_back_black" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginLeft="68dp"
            android:src="@drawable/voshow_black"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="2dp">

            <Switch
                android:id="@+id/IsPasswordOn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textColor="@color/colorAccent"
                android:text="잠금 설정" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="비밀번호 설정"
                android:textColor="@color/colorWhite"
                android:scaleX="0.95"
                android:onClick="ChangePassword"/>

        </LinearLayout>
</LinearLayout>